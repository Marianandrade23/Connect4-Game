<Window x:Class="Connect4Game.EnterNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect4Game"
        mc:Ignorable="d"
        Title="Enter Name Window" Height="250" ResizeMode="NoResize" Width="400">
    <Grid Background="#FF99C8DC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="313*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="nameLabel" Content="Please Enter Your Name " HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" Height="30" Width="204" FontWeight="Bold" FontSize="16" Foreground="#FF186069" Grid.Column="1"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Margin="10,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="193" Height="31" Grid.Column="1"/>
        <Button x:Name="continueButton" Content="Continue" HorizontalAlignment="Left" Margin="67,135,0,0" VerticalAlignment="Top" Height="27" Width="78" FontWeight="Bold" Foreground="#FF186069" Click="continueButton_Click" Grid.Column="1"/>
    </Grid>
</Window>
