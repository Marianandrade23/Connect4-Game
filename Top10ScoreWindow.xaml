<Window x:Class="Connect4Game.Top10ScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect4Game"
        mc:Ignorable="d"
        Title="Top10ScoreWindow" Height="600" ResizeMode="NoResize" Width="500">
    <Grid Background="#FF99C8DC">
        <GroupBox Header="Top 10 Players" Margin="10,10,10,72">
            <ListBox x:Name="scoreListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Height="324" Margin="28,0,39,0"/>
        </GroupBox>
        <Button x:Name="Show10Winnersbtn" Content="Show top 10s" HorizontalAlignment="Left" Margin="71,517,0,0" VerticalAlignment="Top" Height="36" Width="125" Click="Button_Click"/>
        <Button x:Name="Startbtn" Content="Start" HorizontalAlignment="Left" Margin="295,517,0,0" VerticalAlignment="Top" Height="36" Width="126" Click="Startbtn_Click"/>

    </Grid>
</Window>
