<Window x:Class="Connect4Game.Rules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect4Game"
        mc:Ignorable="d"
        Title="Rules" Height="450" Width="800">
    <Grid Background="#FF99C8DC">
        <Button x:Name="closebtn" Content="Close" HorizontalAlignment="Left" Margin="331,350,0,0" VerticalAlignment="Top" Height="43" Width="102" Click="closebtn_Click_1"/>
        <TextBox x:Name="rulestxt" HorizontalAlignment="Left" Margin="129,79,0,0" TextWrapping="Wrap" Text="Select whether or not you want to play with a friend or a bot by clicking the play with a friend button to play player vs player, or click the player with AI button to play with bots, then select the board size to start. Once that is done, click the start button on the bottom of the screen to start the game. Once the game is finished, press the reset button to restart, from which you can also change your previous settings." VerticalAlignment="Top" Width="506" Height="247" FontSize="20"/>

    </Grid>
</Window>
